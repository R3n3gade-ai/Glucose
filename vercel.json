{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "glp-clone.html", "use": "@vercel/static" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/checkout", "dest": "/public/checkout.html" },
    { "src": "/thank-you", "dest": "/public/thank-you.html" },
    { "src": "/thank-you-final", "dest": "/public/thank-you-final.html" },
    { "src": "/upsell-1", "dest": "/public/upsell-1.html" },
    { "src": "/", "dest": "/index.html" }
  ]
}
